<%- include("templates/header") %>
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto mt-25">
                <div class="card card-signin my-5">
                    <div class="card-body">
                        <div style="background-color: #0d6efd; color:white; border-radius: 5px;">
                            <div style="padding:10px; font-size: 24px" class="text-center mb-4">Reset Your Password</div>
                        </div>
            
                        <form id="resetPasswordForm" class="form-signin" action="" method="post">
                            <div style="margin-bottom: 1.5rem" class="form-label-group">
                                <input name="password" type="password" id="newPassword" class="form-control"
                                    placeholder="Enter new password" required>
                            </div>

                            <div style="margin-bottom: 1.5rem" class="form-label-group">
                                <input name="passwordConfirm" type="password" id="newPasswordConfirm"
                                    class="form-control" placeholder="Confirm new password" required>
                            </div>
                            <div style="text-align:center">
                                <button class="btn btn-lg btn-primary btn-block" type="submit">Reset Password</button>
                            </div>
                            
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include("templates/footer") %>