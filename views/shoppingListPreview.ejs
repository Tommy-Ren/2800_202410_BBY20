<%- include("templates/header") %>
<div class="containter">
    <div class="easterEggHeader">
        <!-- <input class="sortIcon"><i class="bi bi-sliders"></i></input> -->
        <div class="sortIcon"> 
            <div class="toggle">
                <span class="top_line common"></span>
                <span class="middle_line common"></span>
                <span class="bottom_line common"></span>
            </div>
        </div>


        <div id="shoppingList" class="easterEggChange">Shopping List</div>
    </div>

    <div class="slider">
        <ul>
            <div class="sortType"><i class="bi bi-calendar4-week"></i>Sort by date</div>
            <li class="sortOption"><i class="bi bi-sort-numeric-up"></i>Ascending</li>
            <br>
            <li class="sortOption"><i class="bi bi-sort-numeric-down"></i>Descending</li>
        </ul>

        <ul>
            <div class="sortType"><i class="bi bi-cart3"></i>Sort by number of items</div>
            <li class="sortOption"><i class="bi bi-sort-numeric-up"></i>Ascending</li>
            <br>
            <li class="sortOption"><i class="bi bi-sort-numeric-down"></i>Descending</li>
        </ul>
    </div>


    </div>

    <script>
        document.querySelector('.toggle').addEventListener('dblclick', function() {
            
            var slider = document.querySelector('.slider');
            
            
            var div = document.querySelector('.easterEggChange');
            var newText = div.innerHTML.replace('Shopping List', 'Fun, right babe? ðŸ˜˜');
            div.innerHTML = newText;
            
            setTimeout(function() {
                var originalText = newText.replace('Fun, right babe? ðŸ˜˜', 'Shopping List');
                div.innerHTML = originalText;
            }, 800);
            slider.style.display = 'block';
            
        });
        
        document.querySelector('.toggle').addEventListener('click', function() {
            this.classList.toggle('clicked');
            var slider = document.querySelector('.slider');
            if (slider.style.display == 'block') {
              //  slider.style.transition = '4s ease-out';
                slider.style.opacity = '0';
                slider.style.display = 'none';
            } else {
                slider.style.opacity = '1';
                slider.style.display = 'block';
            }
        });
        
        
    </script>
