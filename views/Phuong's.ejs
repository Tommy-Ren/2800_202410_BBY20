<%- include("templates/header") %>
    <div class="container">
        <div class="col-md-6 offset-md-3">
            <span class="anchor" id="formResetPassword"></span>
            <div class="card card-outline-secondary">
                <div class="card-header">
                    <h3 class="mb-0">Password Reset</h3>
                </div>
                <div class="card-body">
                    <form class="form" role="form" autocomplete="off">
                        <div class="form-group">
                            <label  class="form-text" for="inputResetPasswordEmail">Email</label>
                            <input type="email" class="form-control" id="inputResetPasswordEmail" required="">
                            <div id="helpResetPasswordEmail" class="form-text small text-muted">
                                Password reset instructions will be sent to this email address.
                            </div>
                        </div>
                        <div class="btn-class form-group">
                            <button type="submit" class="btn btn-primary btn-lg float-right">Reset</button>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /form card reset password -->

        </div>
    </div>

    <!-- <%- include("templates/footer") %> -->
</body>