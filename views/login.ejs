<%- include("templates/header") %>
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Log In</h5>

            <form class="form-signin" action="/loggingin" method="post">
              <div class="form-label-group">
                <input name="email" type="email" id="loginEmail" class="form-control" placeholder="Email address">

              </div>

              <div class="form-label-group" z>
                <input name="password" type="password" id="loginPassword" class="form-control"
                  placeholder="Password" required>
              </div>
              <div style="margin-bottom: 1rem" class="text">
                <!-- Simple link -->
                <a href="/passwordReset">Forgot password?</a>
              </div>

              <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Log in</button>

              <div class="text">
                Don't have an account? <a href="/signup">Sign up</a>
              </div>

              <hr class="my-4">

              <button class="btn btn-lg btn-google btn-block text-uppercase" type="submit"><i
                  class="fab fa-google mr-2"></i> Log in with Google</button>
              <button class="btn btn-lg btn-facebook btn-block text-uppercase" type="submit"><i
                  class="fab fa-facebook-f mr-2"></i> Log in with Facebook</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
<%- include("templates/footer") %>