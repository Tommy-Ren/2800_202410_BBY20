<%- include("templates/header") %>
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Log In</h5>

            <form class="form-signin" action="/loggingin" method="post">

              <div class="form-label-group">
                <input name="email" type="email" id="loginEmail" class="form-control" placeholder="Email address">
              </div>

              <div class="form-label-group" z>
                <input name="password" type="password" id="loginPassword" class="form-control" placeholder="Password"
                  required>
              </div>

              <div class="text">
                <a href="/forgetPassword">Forget your password?</a>
              </div>
              <br>
              <button class="btn btn-lg btn-primary btn-block" type="submit">Log in</button>

              <div class="text">
                Don't have an account? <a href="/signup">Sign up</a>
              </div>
              <div class="divider d-flex align-items-center my-4">
                <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
              </div>

              <button class="btn btn-lg btn-google btn-block" id="login-google">
                <i class="bi bi-google"></i> Log in with Google</button>
              <button class="btn btn-lg btn-facebook btn-block" id="login-facebook">
                <i class="bi bi-facebook"></i></i> Log in with Facebook</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="module" src="/js/login.js"></script>    
  <%- include("templates/footer") %>