<%- include("templates/header") %>
    <div class="container">
        <% if (authorized) { %>
            <% var currentTime = new Date(); %>
            <% var currentHour = currentTime.getHours(); %>
            <% var greeting = ""; %>
            <% if (currentHour < 12) { %>
                <% greeting = "Good morning"; %>
            <% } else if (currentHour < 18) { %>
                <% greeting = "Good afternoon"; %>
            <% } else { %>
                <% greeting = "Good evening"; %>
            <% } %>
            <div class="d-flex justify-content-center mt-4">
                <h1><%= greeting %>, <%= username %>!</h1>
            </div>
            <div class="d-flex justify-content-center mt-4">
                <a href="/members" class="btn btn-primary mx-3">Go to Members Area</a>
                <a href="/logout" class="btn btn-danger mx-3">Log out</a>
            </div>
        <% } else { %>
            <div class="d-flex justify-content-center mt-4">
                <h1>Welcome to Tommy's Website!</h1>
            </div>
            <div class="col-lg-6 col-xxl-4 my-4 mx-auto">
                <div class="d-grid gap-2">
                    <a href="/login" class="btn btn-primary" role="button">Login</a>
                    <a href="/signup" class="btn btn-outline-secondary" role="button">Sign up</a>
                </div>
            </div>
        <% } %>
    </div>
<%- include("templates/footer") %>
