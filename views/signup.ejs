<%- include("templates/header") %>
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Sign Up</h5>

            <form class="form-signin" action="/signupSubmit" method="post">
              <div class="form-label-group">
                <input name="name" type="text" id="signupName" class="form-control" placeholder="Name"
                  required>
              </div>

              <div class="form-label-group">
                <input name="email" type="email" id="signupEmail" class="form-control"
                  placeholder="Email address" required autofocus>
              </div>

              <div class="form-label-group">
                <input name="password" type="password" id="signupPassword" class="form-control"
                  placeholder="Password" required>
              </div>

              <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Sign Up</button>

              <div class="text">
                Already have an account? <a href="/login">Log In</a>
              </div>

              <hr style="margin-top: 10rem;" class="my-4">
              <button class="btn btn-lg btn-google btn-block text-uppercase" id="signup-google"><i
                  class="fab fa-google mr-2"></i>Sign Up with Google</button>
              <button class="btn btn-lg btn-facebook btn-block text-uppercase" id="signup-facebook"><i
                  class="fab fa-facebook-f mr-2"></i>Sign Up with Facebook</button>
            </form>

          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="module" src="/js/signup.js"></script>
<%- include("templates/footer") %>